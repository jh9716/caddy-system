generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AssignmentType {
  OFF
  SICK
  LONG_SICK
  DUTY
  MARSHAL
  ACCIDENT
  FAMILY_EVENT
}

enum ShiftPart {
  ONE
  TWO
  THREE
}

enum ShiftVariant {
  NORMAL
  ONE_THREE
  ONE_TWO
  FIFTY_FOUR
}

model Caddy {
  id          Int          @id @default(autoincrement())
  name        String
  team        String
  status      String?      @default("근무중")
  memo        String?
  assignments Assignment[]
  schedules   Schedule[]
  shiftDuties ShiftDuty[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Assignment {
  id        Int             @id @default(autoincrement())
  caddy     Caddy           @relation(fields: [caddyId], references: [id])
  caddyId   Int
  type      AssignmentType
  subType   String?
  startDate DateTime
  endDate   DateTime
  comment   String?
  createdAt DateTime        @default(now())
}

model Audit {
  id        Int      @id @default(autoincrement())
  action    String
  entity    String
  entityId  Int?
  ip        String?
  payload   Json?
  createdAt DateTime @default(now())
}

model DailySchedule {
  id        Int      @id @default(autoincrement())
  date      DateTime
  available Int
  rest      Int
  sick      Int
  longSick  Int
  duty      Int
  marshal   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Schedule {
  id      Int      @id @default(autoincrement())
  date    DateTime
  caddyId Int
  memo    String?
  caddy   Caddy    @relation(fields: [caddyId], references: [id])
}

model Notice {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  author    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())
}

model ShiftDuty {
  id      Int          @id @default(autoincrement())
  date    DateTime
  part    ShiftPart
  variant ShiftVariant @default(NORMAL)

  orderNo Int
  caddyId Int
  team    String?
  caddy   Caddy       @relation(fields: [caddyId], references: [id])

  createdAt DateTime  @default(now())

  @@index([date, part])
}

model ScheduleExtraTag {
  id        Int      @id @default(autoincrement())
  date      DateTime
  caddyId   Int
  tag       String

  createdBy String?
  createdAt DateTime @default(now())

  @@unique([date, caddyId, tag])
  @@index([date, caddyId])
}
